<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.nox.coloricon.downloader"
       name="Aeon Nox Color Icon Pack Downloader"
       version="0.0.1"
       provider-name="WarLion">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Color Icon pack Downloader</summary>
		<description>Downloads Color icons packs from a specified URL</description>
		<disclaimer>Needs skin support for it to be used properly</disclaimer>
        <language></language>
  </extension>
</addon>